{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "data": {
    "url": "usa_earthquake.csv"
  },

  "hconcat": [
    {
      "title": {
        "text": "Number of different Mag types",
        "subtitle": "click to select   scatter plot",
        "align": "center",
        "fontSize": 18
      },

      "width": 450,
      "height": 400,
      "mark": "bar",
      "params": [
        {
          "name": "pts",
          "select": { "type": "point", "encodings": ["x"] }
        }
      ],
      "encoding": {
        "x": {
          "field": "magType",
          "axis": { "labelAngle": -40 },
          "sort": { "op": "count", "field": "mag" }
        },
        "y": { "aggregate": "count" },
        "color": {
          "condition": {
            "param": "pts",
            "value": "steelblue"
          },
          "value": "grey"
        }
      }
    },
    {
      "layer": [
        {
          "title": {
            "text": "mag vs depth",
            "align": "center",
            "fontSize": 20
          },
          "width": 450,
          "height": 400,
          "transform": [
            {
              "filter": { "param": "pts" }
            }
          ],
          "mark": { "type": "point" },
          "encoding": {
            "x": {
              "field": "depth",
              "type": "quantitative"
            },
            "y": {
              "field": "mag",
              "type": "quantitative"
            },
            "size": {
              "aggregate": "count",
              "legend": { "title": "Selected mag Count" },
              "scale": {
                "type": "linear",
                "range": [400, 2000]
              }
            },
            "tooltip": [
              {
                "field": "depth",
                "type": "quantitative"
              }
            ],
            "fill": {
              "field": "magType",
              "type": "nominal"
            },
            "fillOpacity": { "value": 0.5 }
          }
        }
      ]
    }
  ]
}
